<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="209dp"
        android:layout_height="55dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="40dp"
        android:text="Patients List"
        android:textSize="33dp" />

    <TextView
        android:id="@+id/txtEnterDetails"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="40dp"
        android:text="Enter details                     PatientsList                         Inventory"
        android:textSize="15dp" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="423dp"
        android:layout_height="152dp"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txtAge"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="20dp"
        android:text="Age"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="20dp"
        android:text="Address"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txtphn"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="20dp"
        android:text="Phone number"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txtPrakruti"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="20dp"
        android:text="Prakruti"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txtChiefcomplaints"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="20dp"
        android:text="Chief Complaints"
        android:textSize="16dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="20dp"
        android:text="Continue"
        android:textSize="16dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="111dp"
        android:layout_height="38dp"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="-42dp"
        android:text="Cancel"
        android:textSize="16dp"/>
</LinearLayout>


